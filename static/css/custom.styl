$dr-amor-color_1 = red
$dr-amor-color_2 = #211915
$dr-amor-color_3 = white
$dr-amor-color_4 = #5B5B5F
$dr-amor-color_5 = #ECEDEF

.btn-primary
  background-color $dr-amor-color_1
  border-color $dr-amor-color_1

.btn-primary:hover
  background-color $dr-amor-color_2
  border-color $dr-amor-color_2

.tabla-maestra
  font-size 11px
  tbody
    .tr-seleccionado
      background-color black !important
      color white !important
    tr:hover
      background-color white !important
      color black !important

.boton-flotante
  position fixed
  right 30px
  bottom 40px
  cursor pointer
  :hover
    color red
  :active
    color green

form
  .btn
    font-size 0.8rem
    margin 0.4rem

.btn-limpiar
  background-color darkgray
  color white

.btn-guardar
  background-color black
  color white

.btn-cancelar
  background-color lightskyblue
  color white

.btn-eliminar
  background-color red
  color white

.puntero
  cursor pointer

.loading-overload-uno
  position relative

.loading-overload-dos
  &:before
    content ''
    background rgba(255, 255, 255, 0.5)
    width 100%
    height 100%
    opacity .9
    position absolute
    z-index 99

.loading-overload-tres
  border-radius 10px
  font-size 2rem
  position fixed
  text-align center
  top 50%
  left 50%
  transform translate(-50%, -50%)
  z-index 99
  background-color $dr-amor-color_1
  padding 0.5rem
  color white

.left-icon
  margin 0 0 0 12px !important

.right-icon
  margin 0 12px 0 0 !important

.boton-index
  a
    color $dr-amor-color_1
    :hover
      background-color black
      color white !important
      border 2px solid black !important
    :active
      text-decoration none
    :visit
      text-decoration none
    .icono
      border-radius 25px
      border 2px solid $dr-amor-color_1
      padding 1rem
      width 100%

.texto-cita
  font-size 10px
  position absolute
  color gray
  &.bottom
    bottom 0
  &.top
    top -5px
  &.right
    right 0px

.form-field-error
  position relative
  bottom 15px
  font-size 12px
  line-height 12px
  color rgb(244, 67, 54)
  transition all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms